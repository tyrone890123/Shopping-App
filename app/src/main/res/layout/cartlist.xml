<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/snowywhite"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="15dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        app:cardElevation="0dp"
        android:id="@+id/cartholder">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageholderecartitem"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/imagecartitem"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageholderecartitem"
                android:layout_toRightOf="@+id/imageholderecartitem"
                android:text="Lorem Ipsum"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/nameofcartitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameofcartitem"
                android:layout_toRightOf="@+id/imageholderecartitem"
                android:text="Category"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:id="@+id/categoryofcartitem"/>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/categoryofcartitem"
                android:layout_toLeftOf="@id/quantityofcartitem"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_add"
                android:background="@color/transparent"
                android:id="@+id/cartadd"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/categoryofhotitem"
                android:src="@drawable/ic_sub"
                android:background="@color/transparent"

                android:id="@+id/cartsub"
                android:layout_alignBottom="@id/quantityofcartitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/cartsub"
                android:layout_below="@id/categoryofcartitem"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textColor="@color/soothing"
                android:id="@+id/quantityofcartitem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_alignBottom="@+id/nameofcartitem"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/soothing"
                android:id="@+id/cartitemprice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cartitemprice"
                android:layout_alignBottom="@+id/nameofcartitem"
                android:text="â‚±"
                android:textColor="@color/soothing"
                android:id="@+id/cartpricesign"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>