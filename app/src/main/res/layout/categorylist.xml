<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/storeparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/snowywhite"
        android:id="@+id/singleCategory"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imageCategoryHolder">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="190dp"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/imageCategory"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_centerInParent="true"
                android:layout_below="@+id/imageCategoryHolder"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/nameCategory"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>