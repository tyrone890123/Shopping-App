<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/snowywhite"
        android:layout_marginHorizontal="3dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        app:cardElevation="0dp"
        android:id="@+id/hotitemholder">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageholderhotitem"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/imagedelivereditem"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:layout_alignTop="@+id/nameofdelivereditem"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/statusdelivereditem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageholderhotitem"
                android:layout_toRightOf="@+id/imageholderhotitem"
                android:text="Lorem Ipsum"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/nameofdelivereditem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameofdelivereditem"
                android:layout_toRightOf="@+id/imageholderhotitem"
                android:text="Seller"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:id="@+id/sellerofdelivereditem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_below="@id/sellerofdelivereditem"
                android:layout_toRightOf="@id/pricesign"
                android:layout_marginRight="10dp"
                android:textColor="@color/soothing"
                android:id="@+id/pricedelivereditem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/sellerofdelivereditem"
                android:layout_alignBottom="@+id/pricedelivereditem"
                android:text="â‚±"
                android:textColor="@color/soothing"
                android:id="@+id/pricesign"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/sellerofdelivereditem"
                android:layout_marginRight="10dp"
                android:textColor="@color/soothing"

                android:id="@+id/quantitydelivereditem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/quantitydelivereditem"
                android:layout_alignBottom="@+id/quantitydelivereditem"
                android:text="x"
                android:textColor="@color/soothing"
                android:id="@+id/xsign"/>

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/notrecieved"
                android:layout_alignBottom="@+id/recieved"
                android:background="@color/soothing"
                android:src="@drawable/ic_x"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/notrecieved"
                android:layout_marginRight="5dp"
                android:layout_below="@id/quantitydelivereditem"
                android:id="@+id/recieved"
                android:text="recieved"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>