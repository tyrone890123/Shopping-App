<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/snowywhite"
        android:layout_marginHorizontal="3dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        app:cardElevation="0dp"
        android:id="@+id/orderholder">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageholderhotitem"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/imageorderitem"
                    />
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:layout_alignTop="@+id/nameoforderitem"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/statusorderitem"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageholderhotitem"
                android:layout_toRightOf="@+id/imageholderhotitem"
                android:text="Lorem Ipsum"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/nameoforderitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_below="@id/nameoforderitem"
                android:layout_toRightOf="@id/pricesign"
                android:layout_marginRight="10dp"
                android:textColor="@color/soothing"
                android:id="@+id/priceorderitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/nameoforderitem"
                android:layout_alignBottom="@+id/priceorderitem"
                android:text="â‚±"
                android:textColor="@color/soothing"
                android:id="@+id/pricesign"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/soothing"
                android:layout_marginBottom="15dp"
                android:id="@+id/quantityorderitem"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/quantityorderitem"
                android:layout_alignBottom="@+id/quantityorderitem"
                android:text="x"
                android:textColor="@color/soothing"
                android:id="@+id/xsign"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/snowywhite"
        android:layout_marginHorizontal="3dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        android:layout_below="@id/orderholder"
        android:visibility="gone"
        app:cardElevation="0dp"
        android:id="@+id/drop">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="adress"
                android:layout_centerHorizontal="true"
                android:id="@+id/adressholder"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/adressholder"
                android:layout_centerHorizontal="true"
                android:id="@+id/orderradiogroup"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/soothing"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/radiobuttonprocessing"
                    android:text="Processing"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/soothing"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/radiobuttonshipping"
                    android:text="Shipping"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/soothing"
                    android:layout_marginHorizontal="5dp"
                    android:id="@+id/radiobuttondelivered"
                    android:text="Delivered"/>
            </RadioGroup>
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>