<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/storeparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/snowywhite"
        android:id="@+id/singlestore"
        app:strokeWidth="1dp"
        app:strokeColor="@color/lighterblack"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/imagestoreholder">
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="190dp"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/imagestore"/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="store"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/imagestoreholder"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/namestorepic"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/ratingtotal"
                android:layout_below="@id/imagestoreholder"
                android:textColor="@color/soothing"
                android:textStyle="bold"
                android:id="@+id/rating"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/5"

                android:layout_toLeftOf="@id/starimage"
                android:layout_below="@id/imagestoreholder"
                android:textColor="@color/soothing"
                android:textStyle="bold"
                android:id="@+id/ratingtotal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem City"
                android:layout_below="@id/namestorepic"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:id="@+id/adressimage"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_alignRight="@+id/imagestoreholder"
                android:layout_below="@+id/imagestoreholder"
                android:layout_marginRight="5dp"
                android:id="@+id/starimage"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>